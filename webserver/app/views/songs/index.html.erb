<div class="container col-xs-12 col-sm-12 col-md-6 col-lg-6 col-xs-offset-0 col-sm-offset-0 col-md-offset-3 col-lg-offset-3">
  <form role="form" action="<%= home_path %>" method="GET">
    <div class="form-group">
      <div class="input-group">
        <input type="text" class="form-control" placeholder="What are you looking for?" name="query"
               value="<%= params[:query] ? params[:query] : "" %>">
        <span class=" input-group-btn"> <input class="btn btn-success" type="submit" value="Search"> </span>
      </div>
    </div>
  </form>
  <h3 align="center" id="no-record" style="display: none; color: red"><br>No records found.</h3>
</div>

<div class="container col-xs-12 col-sm-12 col-md-12 col-lg-12 col-xs-offset-0 col-sm-offset-0 col-md-offset-0 col-lg-offset-0">

  <div class="lazy-load">
  </div>

  <div class="col-xs-2 col-xs-offset-5">
    <div id="marker"></div>
    <div>&nbsp</div>
    <%= image_tag "loading.gif", id: "loader", style: "width: 100%; height: 100%" %>
    <div>&nbsp</div>
  </div>


</div>
<input id="query" type="hidden" value="<%= params[:query] ? params[:query] : "" %>">
<script>
    <%= render 'scripts/index.js' %>
</script>